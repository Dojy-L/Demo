<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_material_approval" model="ir.ui.view">
            <field name="name">res.config.settings.material.approval.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app_settings_block">
                        <h2>Material Request Approval</h2>
                        <div class="row mt16 o_settings_container" id="end_resource_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <group>
                                    <field name="destination_id"/>
                                </group>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="kg_material_config_settings_action" model="ir.actions.act_window">
            <field name="name">Material Request Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
        </record>


        <menuitem id="menu_parent_configuration_request"
                  name="Configuration"
                  parent="kg_material_request.menu_parent_material_request"
                  sequence="60"/>

        <menuitem id="menu_settings_material_request"
                  name="Settings"
                  parent="kg_material_request.menu_parent_configuration_request"
                  action="kg_material_request.kg_material_config_settings_action"
                  sequence="61"/>

    </data>
</odoo>