<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_appointment_booking_form" model="ir.ui.view">
        <field name="name">appointment.booking.form</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <form string="Appointment Booking">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_check_in" type="object" string="Check-In"
                            invisible="state not in ('confirmed')"/>
                    <button name="action_check_out" type="object" string="Check-Out" invisible="state != 'checked_in'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state not in ('draft','confirmed')" class="oe_link"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="service_id"/>
                        <field name="appointment_date"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="check_in_time" readonly="1"/>
                        <field name="check_out_time" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="appointment_booking_view_tree" model="ir.ui.view">
        <field name="name">appointment.booking.vew.tree</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <tree string="Appointment Booking">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="service_id"/>
                <field name="appointment_date"/>
                <field name="start_time"/>
                <field name="end_time"/>
            </tree>
        </field>
    </record>

