<?xml version = "1.0" encoding = "UTF-8" ?>
<odoo>
    <template id="expense_portal_form" name="Expense Form">
        <t t-call="website.layout">
            <style>
                body {
                background-image: url('/kg_portal_hrms/static/description/img/3372981_505039-PI4C3G-179.jpeg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                height: 100vh;
                margin: 0;
                display: flex;
                align-items: center;
                justify-content: center;
                font-family: Arial, sans-serif;
                color: #fff;
                }

                .odoo_form {
                max-width: 800px;
                margin: auto;
                padding: 20px;
                background-color:rgba(177, 175, 255, 0.5);
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0,0,0,0.1);
                }

                .odoo_form .form-control,
                .odoo_form .col-form-label {
                color: black;
                font-weight: bold;
                }

                .odoo_form .btn-primary {
                background-color: #FFCA28;
                border-color: #FFCA28;
                opacity: 0.9;
                }

                .styled-submit-button {
                background: linear-gradient(135deg, #FFCA28, #FFA000); /* Updated gradient */
                border: none;
                color: white;
                width: 200px;
                height: 70px;
                padding: 12px 24px;
                font-size: 16px;
                font-weight: bold;
                border-radius: 25px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
                transition: all 0.3s ease;
                cursor: pointer;
                }

                .offset-sm-2 {
                padding-left: 20px;
                margin-left: 60px;
                }

                .styled-submit-button:hover {
                background: linear-gradient(135deg, #FFA000, #FF8F00); /* Updated hover gradient */
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
                transform: translateY(-2px);
                }

                .styled-submit-button:active {
                background: linear-gradient(135deg, #FF8F00, #FF6F00); /* Adjusted active gradient for contrast */
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
                transform: translateY(0);
                }
            </style>


            <div class="container" align="center">
                <br/>
                <u>
                   <h1 style="color: black; background: linear-gradient(to right, #1a2a6c, #b21f1f, #fdbb2d); -webkit-background-clip: text; color: transparent;font-size:75px;">
                    Expense Form
                </h1>
                </u>


                <br/>
                <form method="post" action="/submit_expense" class="odoo_form">
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <input style="height:100px;font-size: 50px;border-radius: 25px;" type="text" id="name"
                                   name="name" class="form-control"
                                   placeholder="Enter description" required="1  "/>
                        </div>
                    </div>
                    <br/>

                    <div class="form-group row">
                        <label for="employee_id" class="col-sm-2 col-form-label">Employee</label>
                        <div class="col-sm-10">
                            <input style="border-radius:15px;height:50px;" type="text" id="employee_id"
                                   name="employee_id"
                                   class="form-control"
                                   t-att-value="employee_id.name" placeholder="Enter employee name"/>
                            <input type="hidden" id="emp_id" name="emp_id" class="form-control"
                                   t-att-value="employee_id.id"/>
                        </div>
                    </div>
                    <br/>

                    <div class="form-group row">
                        <label for="product_id" class="col-sm-2 col-form-label">Category</label>
                        <div class="col-sm-10">
                            <select name="product_id" class="form-control"
                                    style="width:100%;border-radius:15px;height:50px;">
                                <t t-foreach="exp_type" t-as="exp">
                                    <option t-att-value="exp.name">
                                        <t t-esc="exp.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>
                    <br/>

                    <div class="form-group row">
                        <label for="total_amount_currency" class="col-sm-2 col-form-label">Amount</label>
                        <div class="col-sm-10">
                            <input style="border-radius:15px;height:50px;" type="number" id="total_amount_currency"
                                   name="total_amount_currency"
                                   class="form-control" placeholder="Enter amount" required="1"/>
                        </div>
                    </div>
                    <br/>

                    <div class="form-group row">
                        <label for="date" class="col-sm-2 col-form-label">Date</label>
                        <div class="col-sm-10">
                            <input style="border-radius:15px;height:50px;" type="date" id="date" name="date"
                                   class="form-control"
                                   required="1"/>
                        </div>
                    </div>
                    <br/>

                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary styled-submit-button">Submit</button>
                        </div>
                    </div>

                </form>
                <br/>
            </div>
        </t>
    </template>
    <template id="expense_portal_thanks" name="Expense Of Employee">
        <t t-call="website.layout">
            <div class="container thanks-container">
                <h2 style="background-color:#ACD793;" align="center">Your Expense has been successfully registered !!
                </h2>
                <p align="center">We have received your request and will get back to you asap!!!!.</p>
            </div>
        </t>
    </template>
</odoo>